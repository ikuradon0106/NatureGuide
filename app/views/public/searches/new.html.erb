<div class="card mb-4 mx-auto" style="max-width: 700px;">
  <div class="card-body">
    <h4 class="card-title mb-3 text-center">生物検索</h4>

    <%= form_with url: searches_path, method: :get, local: false, html: { class: "row g-3 align-items-center" } do %>
      <div class="col-12 col-md-auto">
        <%= label_tag :keyword, "学名キーワード", class: "form-label mb-0" %>
      </div>
      <div class="col-12 col-md-7">
        <%= text_field_tag :keyword, params[:keyword], class: "form-control", placeholder: "例：Oryza sativa など" %>
      </div>
      <div class="col-12 col-md-auto">
        <%= submit_tag "検索", class: "btn btn-primary w-100" %>
      </div>
    <% end %>

    <div id="search-results" class="mt-4">
      <!-- Ajaxで結果がここに挿入される -->
    </div>
  </div>
</div>
