<h1>プロフィール編集</h1>

<%= form_with model: @user, url: users_mypage_update_path, method: :patch do |f| %>
  <div class="mb-3">
    <%= f.label :nickname, "ニックネーム" %>
    <%= f.text_field :nickname, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :email, "メールアドレス" %>
    <%= f.email_field :email, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :user_image, "プロフィール画像" %><br>
    <%= f.file_field :user_image %>
  </div>

  <div class="mb-3">
    <%= f.label :introduction, "自己紹介" %><br>
    <%= f.text_area :introduction, rows: 5, class: "form-control" %>
  </div>

  <%= f.submit "更新する", class: "btn btn-success" %>
<% end %>

  <%= link_to "退会する", users_unsubscribe_path, class: "btn btn-danger ms-2" %>
  <%= link_to "戻る", mypage_path, class: "btn btn-secondary ms-2" %>


