<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-sm rounded-3">
        <div class="card-header bg-success text-white">
          <h4 class="mb-0">プロフィール編集</h4>
        </div>
        <div class="card-body">

          <%= form_with model: @user, url: users_mypage_update_path, method: :patch do |f| %>
            <div class="mb-3">
              <%= f.label :nickname, "ニックネーム", class: "form-label" %>
              <%= f.text_field :nickname, class: "form-control", placeholder: "例）たろう" %>
            </div>

            <div class="mb-3">
              <%= f.label :email, "メールアドレス", class: "form-label" %>
              <%= f.email_field :email, class: "form-control", placeholder: "example@example.com" %>
            </div>

            <div class="mb-3">
              <%= f.label :user_image, "プロフィール画像", class: "form-label" %><br>
              <%= f.file_field :user_image %>
            </div>

            <div class="mb-3">
              <%= f.label :introduction, "自己紹介", class: "form-label" %>
              <%= f.text_area :introduction, rows: 5, class: "form-control", placeholder: "自己紹介を入力してください" %>
            </div>

            <div class="d-flex justify-content-end">
              <%= f.submit "更新する", class: "btn btn-success me-2" %>
              <%= link_to "戻る", mypage_path, class: "btn btn-secondary me-2" %>
              <%= link_to "退会する", users_unsubscribe_path, class: "btn btn-danger", data: { confirm: "本当に退会しますか？" } %>
            </div>
          <% end %>

        </div>
      </div>
    </div>
  </div>
</div>



