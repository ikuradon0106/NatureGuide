<!-- 管理者からのお知らせ -->
<div class="card mb-4 shadow-sm">
  <div class="card-header bg-secondary text-white">
    <h5 class="mb-0">管理者からのお知らせ</h5>
  </div>
  <div class="card-body">
    <% if @notices.present? %>
      <ul class="list-unstyled mb-0">
        <% @notices.each do |notice| %>
          <li class="mb-4 pb-3 border-bottom">
            <h6 class="fw-bold mb-1"><%= notice.title %></h6>
            <p class="text-muted mb-1" style="font-size: 0.875rem;">
              <%= notice.published_at.strftime("%Y年%m月%d日 %H:%M") if notice.published_at %>
            </p>
            <p class="mb-0"><%= simple_format(truncate(notice.body, length: 200)) %></p>
          </li>
        <% end %>
      </ul>

      <div class="mt-3">
        <%= paginate @notices if @notices.respond_to?(:current_page) %>
      </div>
    <% else %>
      <p class="text-muted mb-0">現在、お知らせはありません。</p>
    <% end %>
  </div>
</div>
