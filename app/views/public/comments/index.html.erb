<h2>コメント一覧</h2>

<% @post.comments.each do |comment| %>
  <p><%= comment.user.nickname %>: <%= comment.body %></p>
  <% if comment.user == current_user %>
    <%= link_to "編集", edit_post_comment_path(@post, comment), class: "btn btn-outline-secondary btn-sm me-2" %>
    <%= link_to "削除", post_comment_path(@post, comment), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-outline-primary btn-sm" %>
  <% end %>
<% end %>