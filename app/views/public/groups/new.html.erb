<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-sm rounded-3">
        <div class="card-header text-dark" style="background-color: #d4edda;">
          <h4 class="mb-0">新しいグループを作成</h4>
        </div>
        <div class="card-body">
          <%= form_with model: @group, url: groups_path, method: :post, html: { multipart: true } do |f| %>
            <div class="mb-3">
              <%= f.label :group_image, "グループアイコン", class: "form-label" %><br>
              <%= f.file_field :group_image %>
            </div>

            <div class="mb-3">
              <%= f.label :group_name, "グループ名", class: "form-label" %>
              <%= f.text_field :group_name, class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= f.label :description, "紹介文", class: "form-label" %>
              <%= f.text_area :description, class: "form-control", rows: 5 %>
            </div>

            <div class="d-flex justify-content-end">
              <%= f.submit "グループを作成", class: "btn btn-success", style: "margin-right: 1rem;" %>
              <%= link_to "戻る", groups_path, class: "btn btn-secondary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
