<!-- 新規登録画面 -->
<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
  <div class="card shadow-sm p-4" style="width: 100%; max-width: 500px;">
    <h2 class="text-center mb-4">新規登録</h2>

    <%= form_with model: resource, url: registration_path(resource_name), local: true do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

      <div class="mb-3">
        <%= f.label :nickname, "ニックネーム（ユーザー名）", class: "form-label" %>
        <%= f.text_field :nickname, class: "form-control", autofocus: true %>
      </div>

      <div class="mb-3">
        <%= f.label :email, "メールアドレス", class: "form-label" %>
        <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :password, "パスワード", class: "form-label" %>
        <% if @minimum_password_length %>
          <em class="form-text text-muted" style="white-space: nowrap;">※ パスワードは最低 <%= @minimum_password_length %> 文字以上で入力してください</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "パスワードを入力してください" %>
      </div>

      <div class="mb-3">
        <%= f.label :password_confirmation, "パスワード（確認用）", class: "form-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "確認のため再度入力してください" %>
      </div>

      <div class="d-grid">
        <%= f.submit "登録する", class: "btn btn-success" %>
      </div>
    <% end %>

    <div class="d-grid">
      <%= render "public/shared/links" %>
    </div>
  </div>
</div>


