<header style="background-color: #d0e8d0;" class="text-dark py-3 shadow-sm border-bottom">
  <nav class="navbar navbar-expand-lg container">
  
    <!-- ブランド名リンク -->
    <% if admin_signed_in? %>
      <%= link_to admin_admin_path, class: "navbar-brand d-flex align-items-center text-dark" do %>
        <i class="fas fa-leaf me-2 text-success"></i>
        <strong>NatureGuide <span class="fs-6 text-muted">(管理者)</span></strong>
      <% end %>
    <% elsif user_signed_in? %>
      <%= link_to mypage_path, class: "navbar-brand d-flex align-items-center text-dark" do %>
        <i class="fas fa-leaf me-2 text-success"></i>
        <strong>NatureGuide</strong>
      <% end %>
    <% else %>
      <%= link_to root_path, class: "navbar-brand d-flex align-items-center text-dark" do %>
        <i class="fas fa-leaf me-2 text-success"></i>
        <strong>NatureGuide</strong>
      <% end %>
    <% end %>

    <!-- ハンバーガーメニュー -->
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
      aria-controls="navbarNav" aria-expanded="false" aria-label="ナビゲーション切り替え">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- ナビゲーションメニュー -->
    <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
      <ul class="navbar-nav">
        <% if admin_signed_in? %>
          <li class="nav-item"><%= link_to "ユーザー一覧", admin_users_path, class: "nav-link text-dark" %></li>
          <li class="nav-item"><%= link_to "投稿一覧", admin_posts_path, class: "nav-link text-dark" %></li>
          <li class="nav-item"><%= link_to "コメント一覧", admin_comments_path, class: "nav-link text-dark" %></li>
          <li class="nav-item"><%= link_to "グループ一覧", admin_groups_path, class: "nav-link text-dark" %></li>
          <li class="nav-item"><%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "nav-link text-dark" %></li>
        <% elsif user_signed_in? %>
          <li class="nav-item"><%= link_to "投稿フォーム", new_post_path, class: "nav-link text-dark", data: {turbolinks: "false"} %></li>
          <li class="nav-item"><%= link_to "投稿一覧", posts_path, class: "nav-link text-dark" %></li>
          <li class="nav-item"><%= link_to "グループ一覧", groups_path, class: "nav-link text-dark" %></li>
          <li class="nav-item"><%= link_to "学名検索", new_search_path, class: "nav-link text-dark" %></li>
          <li class="nav-item"><%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "nav-link text-dark" %></li>
        <% else %>
          <li class="nav-item"><%= link_to "ログイン", new_user_session_path, class: "nav-link text-dark" %></li>
          <li class="nav-item"><%= link_to "About", about_path, class: "nav-link text-dark" %></li>
          <li class="nav-item"><%= link_to "新規登録", new_user_registration_path, class: "nav-link text-dark" %></li>
          <li class="nav-item"><%= link_to "管理者ログイン", new_admin_session_path, class: "nav-link text-dark" %></li>
        <% end %>
      </ul>
    </div>
  </nav>
</header>




