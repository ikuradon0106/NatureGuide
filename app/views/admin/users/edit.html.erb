<div class="container mt-4">
  <h1 class="mb-4"><%= @user.nickname %> さんの情報を編集</h1>

  <div class="card shadow-sm rounded-3">
    <div class="card-header text-dark" style="background-color: #d4edda;">
      <h4 class="mb-0">ユーザー情報編集</h4>
    </div>
    <div class="card-body">
      <%= form_with model: @user, url: admin_user_path(@user), method: :patch, local: true do |f| %>
        <div class="mb-3">
          <%= f.label :nickname, "ニックネーム", class: "form-label" %>
          <%= f.text_field :nickname, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :email, "メールアドレス", class: "form-label" %>
          <%= f.email_field :email, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :is_active, "ステータス", class: "form-label d-block mb-2" %>
          <div class="form-check form-check-inline">
            <%= f.radio_button :is_active, true, id: "active_true", class: "form-check-input" %>
            <%= f.label :is_active_true, "有効", class: "form-check-label", for: "active_true" %>
          </div>
          <div class="form-check form-check-inline">
            <%= f.radio_button :is_active, false, id: "active_false", class: "form-check-input" %>
            <%= f.label :is_active_false, "退会", class: "form-check-label", for: "active_false" %>
          </div>
        </div>

        <div class="d-flex justify-content-between">
          <%= link_to "戻る", admin_user_path(@user), class: "btn btn-secondary me-2" %>
          <%= f.submit "更新する", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

