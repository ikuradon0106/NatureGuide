<div class="container px-3 mt-4">
<h1 class="mb-4">管理者ダッシュボード</h1>

<%# グラフ作る→時間が合ったら %>

<div class="row mb-4">
  <!-- 統計カード -->
  <div class="col-md-3">
    <div class="card text-white bg-primary mb-3">
      <div class="card-body">
        <h5 class="card-title">登録ユーザー数</h5>
        <p class="card-text fs-3"><%= User.count %> 人</p>
      </div>
    </div>
  </div>

  <div class="col-md-3">
  <div class="card text-white bg-success mb-3">
    <div class="card-body">
      <h5 class="card-title">投稿数</h5>
      <p class="card-text fs-3"><%= Post.count %> 件</p>
    </div>
  </div>
</div>

 <div class="col-md-3">
    <div class="card text-white bg-warning mb-3">
      <div class="card-body">
        <h5 class="card-title">コメント数</h5>
        <p class="card-text fs-3"><%= Comment.count %> 件</p>
      </div>
    </div>
  </div>

  <div class="col-md-3">
    <div class="card text-white bg-info mb-3">
      <div class="card-body">
        <h5 class="card-title">グループ数</h5>
        <p class="card-text fs-3"><%= Group.count %> 件</p>
      </div>
    </div>
  </div>
</div>

<div class="row">
      <!-- 重要なお知らせ -->
  
    <%= render 'admin/notices/index' %>
  </div>
 
  <div class="row">
  <!-- 最新の活動ログ（例：新規登録ユーザー、最新投稿など） -->
  <div class="col-md-6">
    <div class="card mb-4">
      <div class="card-header">
        最新の活動ログ
      </div>
      <div class="card-body">
        <h6>新規登録ユーザー</h6>
        <ul>
          <% User.order(created_at: :desc).limit(5).each do |user| %>
            <li><%= user.nickname %>（<%= user.created_at.strftime("%Y-%m-%d ") %>）</li>
          <% end %>
        </ul>

        <h6 class="mt-3">最新投稿</h6>
        <ul>
          <% Post.order(created_at: :desc).limit(5).each do |post| %>
            <li><%= link_to post.title, admin_post_path(post) %>（<%= post.created_at.strftime("%Y-%m-%d") %>）</li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
</div>
</div>

