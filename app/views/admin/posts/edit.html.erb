<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-sm rounded-3">
        <div class="card-header text-dark" style="background-color: #d4edda;">
          <h4 class="mb-0">投稿編集画面</h4>
        </div>
        <div class="card-body">

          <%= form_with model: [:admin, @post], local: true do |f| %>
            <div class="mb-3">
              <%= f.label :title, "タイトル（必須）", class: "form-label" %>
              <%= f.text_field :title, class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= f.label :body, "説明（必須）", class: "form-label" %>
              <%= f.text_area :body, class: "form-control", rows: 5 %>
            </div>

            <div class="mb-3">
              <%# 管理画面なので郵便番号は不要なら削除可能、必要ならコメント外してください %>
              <%= f.label :zipcode, "郵便番号", class: "form-label" %>
              <%= text_field_tag :zipcode, nil, class: "form-control", placeholder: "郵便番号を入力してください（例: 123-4567）" %>
            </div>

            <div class="mb-3">
              <%= f.label :address, "住所（必須）", class: "form-label" %>
              <%= f.text_field :address, class: "form-control", placeholder: "住所を入力してください" %>
            </div>

            <div class="mb-3">
              <%= f.label :image, "画像変更（任意）", class: "form-label" %><br>
              <% if @post.get_image.present? %>
                <%= image_tag @post.get_image.variant(resize_to_limit: [600, 400]), class: "img-fluid mb-2", style: "border: none; max-width: 200px;" %><br>
              <% else %>
                <%= image_tag 'no_image.jpg', class: "img-fluid mb-2", style: "border: none; max-width: 200px;" %><br>
              <% end %>
              <%= f.file_field :image %>
            </div>

            <div class="d-flex justify-content-end gap-3">
              <%= f.submit "更新する", class: "btn btn-success" %>
              <%= link_to "戻る", admin_post_path(@post), class: "btn btn-secondary" %>
            </div>
          <% end %>

        </div>
      </div>
    </div>
  </div>
</div>
