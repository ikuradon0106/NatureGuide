<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">

      <h1 class="mb-4">投稿編集画面</h1>

      <%= form_with model: [:admin, @post], local: true do |f| %>
        <div class="mb-3">
          <%= f.label :title, "タイトル" %>
          <%= f.text_field :title, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :body, "説明" %>
          <%= f.text_area :body, class: "form-control", rows: 5 %>
        </div>

        <div class="mb-3">
          <%= f.label :latitude, "緯度" %>
          <%= f.text_field :latitude, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :longitude, "経度" %>
          <%= f.text_field :longitude, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :image, "画像変更（任意）" %><br>
          <% if @post.get_image.present? %>
            <%= image_tag @post.get_image, class: "img-thumbnail mb-2", width: "200" %><br>
          <% else %>
            <%= image_tag 'no_image.jpg', class: "img-thumbnail mb-2", width: "200" %><br>
          <% end %>
          <%= f.file_field :image %>
        </div>

        <%= f.submit "更新する", class: "btn btn-success" %>
        <%= link_to "戻る", admin_post_path(@post), class: "btn btn-secondary ms-2" %>

        <% end %>
</div>
</div>
</div>