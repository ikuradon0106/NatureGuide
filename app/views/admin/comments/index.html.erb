<h1>コメント一覧</h1>

<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>投稿者</th>
      <th>対象投稿</th>
      <th>作成日時</th>
      <th>コメント内容</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.id %></td>
        <td><%= comment.user.nickname %></td>
        <td><%= link_to commnet.post.title, admin_post_path(post) %></td>
        <td><%= commnet.created_at %></td>
        <td><%= link_to "詳細", admin_user_path(user), class: "btn btn-primary btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>