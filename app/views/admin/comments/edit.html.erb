<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-10 col-lg-8">
      <div class="card shadow-sm rounded-3">
        <div class="card-header text-dark" style="background-color: #d4edda;">
          <h4 class="mb-0">コメント編集</h4>
        </div>
        <div class="card-body">

          <%= form_with model: @comment, url: admin_comment_path(@comment), method: :patch, local: true do |f| %>
            <div class="mb-3">
              <%= f.label :user_id, "投稿者（ユーザー）", class: "form-label" %>
              <%= f.collection_select :user_id, User.all, :id, :nickname, { include_blank: "ユーザーを選択" }, class: "form-select" %>
            </div>

            <div class="mb-3">
              <%= f.label :post_id, "対象投稿（タイトル）", class: "form-label" %>
              <%= f.collection_select :post_id, Post.all, :id, :title, { include_blank: "投稿を選択" }, class: "form-select" %>
            </div>

            <div class="mb-3">
              <%= f.label :body, "コメント内容", class: "form-label" %>
              <%= f.text_area :body, rows: 4, class: "form-control" %>
            </div>

            <div class="d-flex justify-content-end gap-3 mt-4">
              <%= f.submit "更新", class: "btn btn-primary" %>
              <%= link_to "削除", admin_comment_path(@comment), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger" %>
              <%= link_to "戻る", admin_comments_path, class: "btn btn-secondary" %>
            </div>
          <% end %>

        </div>
      </div>
    </div>
  </div>
</div>
