<div class="container mt-5">
  <div class="card">
    <div class="card-header">
      <h2 class="mb-0">グループの編集</h2>
    </div>

    <div class="card-body">
      <%= form_with model: @group, url: admin_group_path(@group), method: :patch, html: { multipart: true } do |f| %>

        <div class="mb-3">
          <%= f.label :group_image, "グループ画像", class: "form-label" %>
          <%= f.file_field :group_image %>
        </div>

        <div class="mb-3">
          <%= f.label :group_name, "グループ名", class: "form-label" %>
          <%= f.text_field :group_name, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :description, "紹介文", class: "form-label" %>
          <%= f.text_area :description, class: "form-control", rows: 5 %>
        </div>

        <div class="mt-4 d-flex">
          <%= f.submit "更新する", class: "btn btn-primary me-2" %>
          <%= link_to "戻る", admin_group_path(@group), class: "btn btn-secondary" %>
        </div>
      <% end %>

      <div class="mt-3">
        <%= link_to "グループを削除する", admin_group_path(@group), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-outline-danger btn-sm" %>
      </div>
    </div>
  </div>
</div>

