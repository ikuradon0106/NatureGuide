<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-10 col-lg-8">
      <div class="card shadow-sm rounded-3">
        <div class="card-header text-dark" style="background-color: #d4edda;">
          <h2 class="mb-0">新しいグループを作成</h2>
        </div>

        <div class="card-body">
          <%= form_with model: @group, url: admin_groups_path, method: :post, html: { multipart: true }, local: true do |f| %>

            <div class="mb-3">
              <%= f.label :group_image, "グループアイコン", class: "form-label" %><br>
              <%= f.file_field :group_image %>
            </div>

            <div class="mb-3">
              <%= f.label :group_name, "グループ名", class: "form-label" %>
              <%= f.text_field :group_name, class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= f.label :description, "紹介文", class: "form-label" %>
              <%= f.text_area :description, class: "form-control", rows: 5 %>
            </div>

            <div class="d-flex justify-content-end gap-3 mt-4">
              <%= f.submit "グループを作成", class: "btn btn-success" %>
              <%= link_to "戻る", admin_groups_path, class: "btn btn-secondary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
