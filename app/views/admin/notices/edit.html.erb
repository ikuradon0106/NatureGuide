<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">

      <div class="card">
        <div class="card-header">
          お知らせ編集
        </div>

        <div class="card-body">
          <%= form_with(model: [:admin, @notice], local: true) do |f| %>
            <div class="mb-3">
              <%= f.label :title, "タイトル", class: "form-label" %>
              <%= f.text_field :title, class: "form-control", required: true %>
            </div>

            <div class="mb-3">
              <%= f.label :body, "本文", class: "form-label" %>
              <%= f.text_area :body, class: "form-control", rows: 5, required: true %>
            </div>

            <div class="form-check mb-3">
              <%= f.check_box :published, class: "form-check-input" %>
              <%= f.label :published, "公開する", class: "form-check-label" %>
            </div>

            <div class="d-flex justify-content-between">
              <%= link_to '戻る', admin_admin_path, class: "btn btn-outline-secondary" %>
              <%= f.submit "更新する", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>
